@model Autopodbor_312.Models.MainPage


@{
    ViewData["Title"] = "Create";
}
<form asp-action="CreateBanner" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Banner" class="control-label">Выберите баннер для отображения</label>
        <select name="Banner" class="form-control" required="required">
            <option value="big">Большой</option>
            <option value="medium">Средний</option>
            <option value="small">Маленький</option>

        </select>
    </div>


    <div class="custom-file">
        <input type="file" name="uploadFile" multiple /><br>
        <label class="custom-file-label" for="customFile">Выберите фото</label>
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>


</form>