@model Autopodbor_312.ViewModel.MainPageViewModel

@{
	ViewData["Title"] = "Редактирование";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Редактирование главной страницы</h1>
<hr />

<div class="row justify-content-evenly">
	<div class="col-md-4">
		<h5 class="mt-3 mb-3 fw-bold fs-2">Первый банер</h5>
		<form method="post" enctype="multipart/form-data">
			<div class="form-group mb-3">
				<label asp-for="@Model.FirstBanner.TitleRu" class="control-label">Заголовок на русском</label>
				<input type="text" maxlength="30" asp-for="@Model.FirstBanner.TitleRu" class="form-control" />
			</div>
			<div class="form-group mb-3">
				<label asp-for="@Model.FirstBanner.DescriptionRu" class="control-label">Описание на русском</label>
				<textarea type="text" maxlength="60" asp-for="@Model.FirstBanner.DescriptionRu" class="form-control"></textarea>
			</div>
			<div class="form-group mb-3">
				<label asp-for="@Model.FirstBanner.TitleKy" class="control-label">Заголовок на кыргызском</label>
				<input type="text" maxlength="30" asp-for="@Model.FirstBanner.TitleKy" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="@Model.FirstBanner.DescriptionKy" class="control-label">Описание на кыргызском</label>
				<textarea type="text" maxlength="60" asp-for="@Model.FirstBanner.DescriptionKy" class="form-control"></textarea>
			</div>
			<input type="hidden" asp-for="@Model.FirstBanner.Id" />
			<input type="hidden" asp-for="@Model.FirstBanner.Banner" />
			<input type="hidden" asp-for="@Model.FirstBanner.Path" />
			<br />
			<div class="form-group">
				<label class="control-label">Если файл не будет загружен, фото не будет изменено!</label>
				<img class="mb-3" width="100" height="100" src="@Model.FirstBanner.Path" />
				<input class="mb-3 btn btn-outline-dark form-control" type="file" name="newPhoto" />
			</div>
			<button class="btn btn-outline-dark" type="submit" asp-action="EditBanner" asp-controller="Home">Изменить</button>
		</form>
	</div>

	<div class="col-md-4">
		<h5 class="mt-3 mb-3 fw-bold fs-2">Второй банер</h5>
		<form method="post" enctype="multipart/form-data">
			<div class="form-group mb-3">
				<label asp-for="@Model.SecondBanner.TitleRu" class="control-label">Заголовок на русском</label>
				<input type="text" maxlength="60" asp-for="@Model.SecondBanner.TitleRu" class="form-control" />
			</div>
			<div class="form-group mb-3">
				<label asp-for="@Model.SecondBanner.DescriptionRu" class="control-label">Описание на русском</label>
				<textarea type="text" maxlength="340" asp-for="@Model.SecondBanner.DescriptionRu" class="form-control"></textarea>
			</div>
			<div class="form-group mb-3">
				<label asp-for="@Model.SecondBanner.TitleKy" class="control-label">Заголовок на кыргызском</label>
				<input type="text" maxlength="60" asp-for="@Model.SecondBanner.TitleKy" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="@Model.SecondBanner.DescriptionKy" class="control-label">Описание на кыргызском</label>
				<textarea type="text" maxlength="340" asp-for="@Model.SecondBanner.DescriptionKy" class="form-control"></textarea>
			</div>
			<input type="hidden" asp-for="@Model.SecondBanner.Id" />
			<input type="hidden" asp-for="@Model.SecondBanner.Banner" />
			<input type="hidden" asp-for="@Model.SecondBanner.Path" />
			<br />
			<div class="form-group">
				<label class="control-label">Если файл не будет загружен, фото не будет изменено!</label>
				<img class="mb-3" width="100" height="100" src="@Model.SecondBanner.Path" />
				<input class="btn btn-outline-dark mb-3 form-control" type="file" name="newPhoto" />
			</div>
			<button class="btn btn-outline-dark" type="submit" asp-action="EditBanner" asp-controller="Home">Изменить</button>
		</form>
	</div>
</div>

<h4 class="mt-5 mb-3 fw-bold fs-2 text-center">Третий банер - Инструменты</h4>
<div class="row justify-content-evenly">
	@foreach (var item in Model.ThirdBanner)
	{
		<div class="col-md-5">
			<form method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="@item.Id" />
				<input type="hidden" asp-for="@item.Banner" />
				<input type="hidden" asp-for="@item.Path" />
				<div class="form-group mb-3">
					<label asp-for="@item.TitleRu" class="control-label mt-5">Заголовок на русском</label>
					<input type="text" maxlength="40" asp-for="@item.TitleRu" class="form-control" />
				</div>
				<div class="form-group mb-3">
					<label asp-for="@item.DescriptionRu" class="control-label">Описание на русском</label>
					<textarea type="text" maxlength="200" asp-for="@item.DescriptionRu" class="form-control"></textarea>
				</div>
				<div class="form-group mb-3">
					<label asp-for="@item.TitleKy" class="control-label">Заголовок на кыргызском</label>
					<input type="text" maxlength="40" asp-for="@item.TitleKy" class="form-control" />
				</div>
				<div class="form-group mb-3">
					<label asp-for="@item.DescriptionKy" class="control-label">Описание на кыргызском</label>
					<textarea type="text" maxlength="200" asp-for="@item.DescriptionKy" class="form-control"></textarea>
				</div>
				<div class="form-group">
					<label class="control-label">Если файл не будет загружен, фото не будет изменено!</label>
					<img class="mb-3" width="100" height="100" src="@item.Path" />
					<input class="mb-3 btn btn-outline-dark form-control" type="file" name="newPhoto" />
				</div>
				<button class="mb-3 btn btn-outline-dark" type="submit" asp-action="EditBanner" asp-controller="Home">Изменить</button>
			</form>
			<form method="get">
				<input class="mb-5 btn btn-outline-dark" type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id" value="Удалить инструмент" />
			</form>
		</div>
	}
</div>