@using System.Threading;
@model Autopodbor_312.ViewModel.FilterPortfolioViewModel;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@{
	ViewData["Title"] = @localizer["portfolioTitle"];
}


<h1>@localizer["portfolioTurnkeySeclectionTitle"]</h1>

<form method="get">
	<div class="form-inline">
		<div>
			<label class="control-label">@localizer["carsBodyLabelOrderForm"] </label>
			<select name="bodyType">
				@if (Model.SelectedBodyType == 0)
				{
					<option value="0">@localizer["allFilter"]</option>
				}
				else
				{
					<option value="0">@Model.SelectedBodyTypeString</option>
				}
				@for (int i = 0; i < Model.CarsBodyTypes.Count; i++)
				{
					<option value="@Model.CarsBodyTypes[i].Id">@Model.CarsBodyTypes[i].BodyType</option>
				}
			</select>
		</div>
		<div>
			<label class="control-label">@localizer["brandLabelOrderForm"] </label>
			<select name="brand">
				@if (Model.SelectedBrand == 0)
				{
					<option value="0">@localizer["allFilter"]</option>
				}
				else
				{
					<option value="0">@Model.SelectedBrandString</option>
				}
				@for (int i = 0; i < Model.CarsBrands.Count; i++)
				{
					<option value="@Model.CarsBrands[i].Id">@Model.CarsBrands[i].Brand</option>
				}
			</select>
		</div>
		<div>
			<label class="control-label">@localizer["modelLabelOrderForm"]  </label>
			<select name="model">
				@if (Model.SelectedModel == 0)
				{
					<option value="0">@localizer["allFilter"]</option>
				}
				else
				{
					<option value="0">@Model.SelectedModelString</option>
				}
				@for (int i = 0; i < Model.CarsModels.Count; i++)
				{
					<option value="@Model.CarsModels[i].Id">@Model.CarsModels[i].Model</option>
				}
			</select>
		</div>
		<input type="submit" value="@localizer["filter"]" class="btn btn-default" />
	</div>
</form>


@foreach (var item in Model.Portfolios)
	{
<div class="card" style="width: 18rem;">
	
		<img src="@item.MainImagePath" class="card-img-top" alt="photo">
		<div class="card-body">
			@if (@Thread.CurrentThread.CurrentCulture.DisplayName == "Русский")
			{
				<h5 class="card-title">@item.NameRu</h5>
				<p>@item.BodyRu</p>
			}
			else
			{
				<h5 class="card-title">@item.NameKy</h5>
				<p>@item.BodyKy</p>
			}
			<p>@item.CreatedDate</p>
			<a asp-controller="Portfolio" asp-action="DetailsPortfolio" asp-route-id="@item.Id">@localizer["detailsButton"]</a>
		</div>

</div>
}

@{
	var prevDisabled = !Model.Portfolios.PreviousPage ? "disabled" : "";
	var nextDisabled = !Model.Portfolios.NextPage ? "disabled" : "";
}
<a asp-action="IndexTurnkeySelection" asp-route-bodyType="@Model.SelectedBodyType" asp-route-brand="@Model.SelectedBrand" asp-route-model="@Model.SelectedModel" asp-route-pageIndex="@(Model.Portfolios.PageIndex-1)" class="btn btn-default @prevDisabled">@localizer["previousButton"]</a>
<a asp-action="IndexTurnkeySelection" asp-route-bodyType="@Model.SelectedBodyType" asp-route-brand="@Model.SelectedBrand" asp-route-model="@Model.SelectedModel" asp-route-pageIndex="@(Model.Portfolios.PageIndex+1)" class="btn btn-default @nextDisabled">@localizer["nextButton"]</a>
