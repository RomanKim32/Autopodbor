@model Autopodbor_312.Models.Portfolio

@{
    ViewData["Title"] = "Удаление портфолио";
}

<h1>Удаление портфолио</h1>
<h3>Вы уверены что хотите удалить портфолио?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название портфолио:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameRu)
        </dd>
        <dt class = "col-sm-2">
            Описание портфолио:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BodyRu)
        </dd>
        <dt class = "col-sm-2">
            Дата последнего обновления:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
    
    <form asp-action="DeletePortfolio">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
