@model PaginationList<Portfolio>

@{
	ViewData["Title"] = "Список портфолио";
}

<h1 class="text-center mt-4">Все портфолио</h1>

<p class="text-center mt-3 mb-4">
	<a class="btn btn-outline-dark" asp-action="CreatePortfolio" asp-controller="Portfolio">Добавить новое портфолио</a>
</p>

<div class="row justify-content-evenly">
	@foreach (var item in Model)
	{
		<div class="card col-md-2 mb-4" style="width: 20rem;">
			<img src="@item.MainImagePath" width="100" height="200" class="card-img-top" alt="photo">
			<div class="card-body">
				<h5 class="card-title fw-bold fs-4">@item.NameRu</h5>
				<p>Дата последнего обновления: @item.CreatedDate</p>
				@if (item.Publicate == false)
				{
					<a class="btn btn-outline-dark" id="public-@item.Id" onclick="Public('@item.Id')">Опубликовать</a>
				}
				else
				{
					<a class="btn btn-outline-dark" id="public-@item.Id" onclick="Public('@item.Id')">Снять с публикации</a>
				}
				<a class="btn btn-outline-dark" asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-id="@item.Id">Изменить</a>
				<a class="btn btn-outline-dark" asp-controller="Portfolio" asp-action="DetailsPortfolio" asp-route-id="@item.Id">Подробнее</a>
				<a class="btn btn-outline-dark" asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-id="@item.Id">Удалить</a>
			</div>
			<div class="card-footer text-muted">
				@if (item.IsFieldInspection)
				{
					<p>Выездной осмотр</p>
				}
				else
				{
					<p>Подбор под ключ</p>
				}
			</div>
		</div>
	}
</div>

@{
	var prevDisabled = !Model.PreviousPage ? "disabled" : "";
	var nextDisabled = !Model.NextPage ? "disabled" : "";
}
<a asp-action="Portfolio" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-outline-dark @prevDisabled">Назад</a>
<a asp-action="Portfolio" asp-route-pageNumber="@(Model.PageIndex+1)" class="btn btn-outline-dark @nextDisabled">Вперед</a>
@section Scripts
	{
	<script>
		function Public(PortfolioId) {
			$.ajax({
				url: '@Url.Action("PublicPortfolio", "Portfolio")',
				type: 'GET',
				data: { 'id': PortfolioId },
				success: function () {
					window.location.href = '/Portfolio/Portfolio';
				}
			});
		}
	</script>
}

