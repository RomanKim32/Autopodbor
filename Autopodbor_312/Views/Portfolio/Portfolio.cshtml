<link type="text/css" rel="stylesheet" href="~/css/Media/IndexPortfolio.css" />
@model List<Portfolio>

@{
	ViewData["Title"] = "Список портфолио";
}

<a asp-action="CreatePortfolio" asp-controller="Portfolio">Добавить новое портфолио</a>



<div class="card" style="width: 18rem;">
	@foreach (var item in Model)
	{
		<img src="@item.MainImagePath" class="card-img-top" alt="photo">
		<div class="card-body">
			<h5 class="card-title">@item.Name</h5>
			@if (item.Publicate == true)
			{
				<p class="card-text">Опубликовать</p>
			}
			<p class="card-text">Снять с публикации</p>
			<a asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-id="@item.Id">Изменить</a>
			<a asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-id="@item.Id">Подробнее</a>
		</div>
	}
</div>

