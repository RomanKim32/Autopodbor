<link type="text/css" rel="stylesheet" href="~/css/Media/CreatePortfolio.css"/>
@model Autopodbor_312.Models.Portfolio

@{
    ViewData["Title"] = "Создать портфолио";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить портфолио</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePortfolio" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameRu" class="control-label">Название портфолио на русском</label>
                <input asp-for="NameRu" class="form-control" />
                <span asp-validation-for="NameRu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyRu" class="control-label">Описание портфолио на русском</label>
                <input asp-for="BodyRu" class="form-control" />
                <span asp-validation-for="BodyRu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameKy" class="control-label">Название портфолио на кыргызском</label>
                <input asp-for="NameKy" class="form-control" />
                <span asp-validation-for="NameKy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyKy" class="control-label">Описание портфолио на кыргыском</label>
                <input asp-for="BodyKy" class="form-control" />
                <span asp-validation-for="BodyKy" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <label class="custom-file-label" for="customFile">Выберите фото для главной страницы</label>
                <input type="file" name="mainPic" /><br />
            </div>
            <div class="form-group">
                <label сlass="control-label">Выберите фотографии для детальной страницы</label>
                <input type="file" name="uploadFiles" multiple /><br>
            </div>
            <div class="form-group">
                <label сlass="control-label">Загрузка видео</label>
                <input type="text" name="video" placeholder="Введите id через пробел" /><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать портфолио" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
