<link type="text/css" rel="stylesheet" href="~/css/ContactInformation/Index.css" />
@model Autopodbor_312.Models.ContactInformation
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@{
    ViewData["Title"] = @localizer["contactInformationTitle"];
}

<div class="card marginTop">
    <div class="row g-0">
        <div class="col-md-6">
            <img src="/mainPageFiles/ContactInformations.jpg" class="img-fluid rounded-start" alt="Photo">
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <div class="container social-iconsInfo">
                    <div class="fontSizeTitle text-center">@localizer["contactInformationTitle"]</div>
                    @if (Model.Email != null)
                    {<div class="list-group-item d-flex prm"> <a class="link-icon" href="mailto:@Model.Email"><i class="fa-solid fa-envelope icon "></i> </a><a href="mailto:@Model.Email" class=" fontSizeText  d-flex">@Model.Email</a></div>}
                    @if (Model.PhoneNumber != null)
                    {<div class="list-group-item d-flex prm justify-content-start"> <a  class="link-icon" href="tel:+996(@Model.PhoneNumber)"><i class="fa-solid fa-phone icon"></i></a> <a  href="tel:+996(@Model.PhoneNumber)" class=" fontSizeText  d-flex "><p>0</p>@Model.PhoneNumber</a> </div>}
                    <div class="d-flex justify-content-center social-iconsInfo1 ">
                        @if (Model.LinkToInstagram != null)
                        {<div class="list-group-item prm"><a class="link-icon" href=" https://www.instagram.com/@Model.LinkToInstagram"><i class="fab fa-instagram icon"></i></a> </div>}
                        @if (Model.LinkToTiktok != null)
                        {<div class="list-group-item prm"><a class="link-icon" href="https://www.tiktok.com/@Model.LinkToTiktok"><i class="fab fa-tiktok icon"></i></a> </div>}
                        @if (Model.LinkToYoutube != null)
                        {<div class="list-group-item prm"><a class="link-icon" href="https://www.youtube.com/@Model.LinkToYoutube"><i class="fab fa-youtube icon "></i></a> </div>}
                        @if (Model.LinkToWhatsapp != null)
                        {<div class="list-group-item prm"><a class="link-icon" href="https://wa.me/@Model.LinkToWhatsapp"><i class="fab fa-whatsapp icon"></i></a></div>}
                        @if (Model.LinkToTelegram != null)
                        {<div class="list-group-item prm"><a class="link-icon" href=" https://t.me/@Model.LinkToTelegram"><i class="fab fa-telegram icon "></i></a></div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>