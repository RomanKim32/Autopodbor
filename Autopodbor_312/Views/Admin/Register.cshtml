@model Autopodbor_312.ViewModel.RegisterViewModel

@{
	ViewBag.Title = "Регистрация менеджеров";
}

<h2 class="mt-3 text-center">Регистрация менеджера</h2>
<hr />
<div class="row justify-content-evenly">
	<div class="col-md-4">
		<form method="post" asp-controller="Admin" asp-action="Register">
			<div asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label asp-for="Email" for="inputEmail3" class="col-form-label">Почта</label>
				<input asp-for="Email" type="email" class="form-control" id="inputEmail3">
				<span asp-validation-for="Email"></span>
			</div>
			<div class="form-group">
				<label class="col-form-label" for="specificSizeSelect">Роль</label>
				<select asp-for="Role" class="form-select" id="specificSizeSelect">
					@foreach (var r in ViewBag.Role)
					{
						<option name="@r.Name">@r.Name</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Password" for="inputPassword3" class="col-form-label">Пароль</label>
				<input asp-for="Password" type="password" class="form-control" id="inputPassword3">
				<span asp-validation-for="Password"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="PasswordConfirm" for="inputPassword3" class="col-form-label">Подтверждение пароля</label>
				<input asp-for="PasswordConfirm" type="password" class="form-control" id="inputPassword3">
				<span asp-validation-for="PasswordConfirm"></span>
			</div>
			<div class="form-group mb-3">
				<button type="submit" class="btn btn-outline-dark">Зарегистрировать</button>
			</div>
		</form>
	</div>
</div>