<link type="text/css" rel="stylesheet" href="~/css/Admin/Register.css" />
@model Autopodbor_312.ViewModel.RegisterViewModel

@{
	ViewBag.Title = "Регистрация менеджеров";
}

<h2 class="mt-3 mb-3">Регистрация менеджера</h2>
<form method="post" asp-controller="Admin" asp-action="Register">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="row mb-3">
		<label asp-for="Email" for="inputEmail3" class="col-sm-2 col-form-label">Почта</label>

		<div class="col-sm-10">
			<input asp-for="Email" type="email" class="form-control" id="inputEmail3">
			<span asp-validation-for="Email"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-2 col-form-label" for="specificSizeSelect">Роль</label>
		<div class="col-sm-10">
			<select asp-for="Role" class="form-select" id="specificSizeSelect">

				@foreach (var r in ViewBag.Role)
				{
					<option name="@r.Name">@r.Name</option>
				}
			</select>
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="Password" for="inputPassword3" class="col-sm-2 col-form-label">Пароль</label>
		<div class="col-sm-10">
			<input asp-for="Password" type="password" class="form-control" id="inputPassword3">
			<span asp-validation-for="Password"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="PasswordConfirm" for="inputPassword3" class="col-sm-2 col-form-label">Подтверждение пароля</label>
		<div class="col-sm-10">
			<input asp-for="PasswordConfirm" type="password" class="form-control" id="inputPassword3">
			<span asp-validation-for="PasswordConfirm"></span>
		</div>
	</div>
	<div class="col-auto">
		<button type="submit" class="btn btn-outline-dark">Зарегистрировать</button>
	</div>
</form>