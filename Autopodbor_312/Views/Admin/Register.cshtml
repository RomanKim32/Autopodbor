@model Autopodbor_312.ViewModel.RegisterViewModel
<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Admin" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br/>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>


    <select asp-for="Role">
        @foreach(var r in ViewBag.Role)
        {
            <option name="@r.Name">@r.Name</option>
        }
    </select>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>