@model Autopodbor_312.ViewModel.EditUserViewModel

@{
	ViewBag.Title = "Изменение пароля";
}

<h2>При изменении пароля перезайдите в учетную запись!!!!</h2>
<form method="post" asp-action="EditUser">
	<div asp-validation-summary="ModelOnly"></div>
	<input type="hidden" asp-for="@Model.Role" />
	<input type="hidden" asp-for="@Model.Id" />
	<input type="hidden" asp-for="@Model.UserName" />
	<input type="hidden" asp-for="@Model.Email" />
	<div class="row mb-3">
		<label asp-for="Email" class="col-sm-2 col-form-label">Почта</label>
		<div class="col-sm-10">
			<input asp-for="Email" type="email" class="form-control" disabled>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="Password" class="col-sm-2 col-form-label">Новый пароль</label>
		<div class="col-sm-10">
			<input asp-for="Password" type="password" class="form-control">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="PasswordConfirm" class="col-sm-2 col-form-label">Подтверждение пароля</label>
		<div class="col-sm-10">
			<input asp-for="PasswordConfirm" type="password" class="form-control">
			<span asp-validation-for="PasswordConfirm"></span>
		</div>
	</div>
	<div class="col-auto">
		<button type="submit" class="btn btn-primary">Изменить</button>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}