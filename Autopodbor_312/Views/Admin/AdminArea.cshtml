<link type="text/css" rel="stylesheet" href="~/css/Admin/AdminArea.css" />
<header>
</header>
<body>
	@if (User.IsInRole("admin"))
	{
		<div class="btn-group">
			<button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Сервисы
			</button>
			<ul class="dropdown-menu">
				<li> <a class="btn btn-info" asp-controller="Service" asp-action="Services">Посмотреть сервисы</a></li>
				<li> <a class="btn btn-info" asp-controller="Service" asp-action="CreateServices">Создать сервис </a></li>
			</ul>
		</div>
		<div class="btn-group">
			<button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Калькулятор
			</button>
			<ul class="dropdown-menu">
				<li> <a class="btn btn-info" asp-controller="Calculator" asp-action="EditCalculator"> Редактировать калькулятор</a></li>
			</ul>
		</div>
		<div class="btn-group">
			<button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Менеджеры
			</button>
			<ul class="dropdown-menu">
				<li> <a class="btn btn-info" asp-controller="Admin" asp-action="Index"> Посмотреть менеджеров </a></li>
				<li> <a class="btn btn-info" asp-controller="Admin" asp-action="Register"> Добавить менеджера </a></li>
			</ul>
		</div>
		<div class="btn-group">
			<button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Контакты
			</button>
			<ul class="dropdown-menu">
				<li> <a class="btn btn-info" asp-controller="ContactInformations" asp-action="Edit"> Редактировать контакты </a></li>
			</ul>
		</div>
	}
	@if (User.IsInRole("portfolioManager") || User.IsInRole("admin"))
	{
		<div class="btn-group">
			<button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Портфолио
			</button>
			<ul class="dropdown-menu">
				<li><a class="btn btn-info" asp-controller="Portfolio" asp-action="Portfolio">Все портфолио</a></li>
				<li> <a class="btn btn-info" asp-controller="Portfolio" asp-action="CreatePortfolio">Добавить портфолио </a></li>
			</ul>
		</div>
	}
	@if (User.IsInRole("mediaManager") || User.IsInRole("admin"))
	{
		<div class="btn-group">
			<button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
				Новости
			</button>
			<ul class="dropdown-menu">
				<li><a class="btn btn-info" asp-controller="News" asp-action="News">Все новости</a></li>
				<li> <a class="btn btn-info" asp-controller="News" asp-action="CreateNews">Добавить новость </a></li>
			</ul>
		</div>
	}
</body>
<footer>
</footer>

