@model Autopodbor_312.ViewModel.LoginViewModel
@{
	ViewBag.Title = "Авторизация";
}

<h2 class="mt-3 text-center">Авторизация</h2>
<hr />
<div class="row justify-content-evenly">
	<div class="col-md-4">
		<form method="post" asp-controller="Admin" asp-action="Login"
			  asp-route-returnUrl="@Model.ReturnUrl">
			<div asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label asp-for="Email" class="col-form-label">Почта</label><br />
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class="form-group mt-1 mb-3">
				<label asp-for="Password" class="col-form-label">Пароль</label><br />
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password"></span>
			</div>
			<div>
				<input class="btn btn-outline-dark" type="submit" value="Войти" />
			</div>
		</form>
	</div>
</div>