@model List<User>


@{
    ViewData["Title"] = "Home Page";
}

@if (@Model.Count() == 0)

{

    <p>Менеджеры еще не добавлены</p>

}
else
{

<table class="table">
<thead>
    <tr>
        <th>
            Email
        </th>
        <th>
            Password
        </th>
    </tr>
</thead>

<tbody>

    @foreach (var item in Model)
    {  
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="EditUser" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                       @* <a asp-action="Delete" type="button" id="UserId" data-bs-toggle="modal" data-bs-target="#exampleModal" asp-route-id="@item.Id">Delete</a> |*@
                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="GetId('@item.Id')">Удалить</button>
            </td>
        </tr>
    }
</tbody>
</table>

   

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Подтверждение удаления менеджера</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Вы увервены?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="Delete()">Да</button>
                   @* <input type="button" value="Да" class="btn btn-primary" onclick="Delete()" />*@
                </div>
            </div>
        </div>
    </div>
}


<script>

    
    
    let Id = 0;
    console.log(Id);
    function GetId(id)
    {
       Id = id;
        console.log(Id);
    }
    

    function Delete() {
        $.ajax({

            url: '@Url.Action("DeleteConfirmed", "Admin")',
            type: 'POST',
            data: {
                'Id': Id,
            },
            success: setTimeout(function () { 
                     window.location.href = '/Admin/Index'; 
                }, 500), 
        });
    @*        document.getElementById("UserForm").style.display = "none";*@
            event.preventDefault();
    };
    
</script>


