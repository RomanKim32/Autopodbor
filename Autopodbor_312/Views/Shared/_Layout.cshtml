    </div>
  </nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="d-flex justify-content-center bd-highlight" style="padding:0;">
			<div class="bd-highlight" style="padding-right:30px;"><a class="dropdown-item" style="padding:0;" href="https://www.instagram.com/autopodbor.312/"> <img src="https://cdn-icons-png.flaticon.com/512/1077/1077042.png" style="width:25px;height:25px;padding:0;"></a></div>
			<div class="bd-highlight" style="padding-right:25px;"><a class="dropdown-item" style="padding:0;" href="https://Wa.me/996558303707">  <img src="https://cdn-icons-png.flaticon.com/512/1384/1384023.png" style="width:26px;height:26px;padding:0;"></a></div>
			<div class="bd-highlight" style="padding-right:25px;"><a class="dropdown-item" style="padding:0;" href="https://t.me/+996558303707">      <img src="https://cdn-icons-png.flaticon.com/512/2111/2111813.png" style="width:26px;height:26px;padding:0;"></a></div>
		</div>
	</footer>
	@RenderSection("Scripts", required: false)
</body>

<div class="callback-bt" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#callbackModal">
	<div class="text-call">
		<span id="call">   <i class="fa-thin fa-phone"></i>@localizer["callbackButton"]</span>
	</div>
</div>

<!-- CallbackModal -->
<div class="modal fade" id="callbackModal" tabindex="-1" aria-labelledby="callbackModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="callbackModalLabel">@localizer["callbackFormTitle"]</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form action="" id="callBackform" role="form">
				<div class="modal-body">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label class="control-label">@localizer["nameLabelCallbackForm"]</label>
						<input id="UserName" class="form-control" />
					</div>
					<div class="form-group">
						<label class="control-label">@localizer["phoneNumberLabelCallbackForm"]</label>
						<input id="Phone" class="form-control" required oninvalid="this.setCustomValidity('@localizer["customValidityPhoneNumber"]')" onchange="this.setCustomValidity('')" />
					</div>
					<div class="form-group">
						<label class="control-label">@localizer["emailLabelCallbackForm"]</label>
						<input id="email" class="form-control" type="email" oninvalid="this.setCustomValidity('@localizer["customValidityEmail"]')" onchange="this.setCustomValidity('')" />
					</div>
					<div class="form-group">
						<label class="control-label">@localizer["сommentLableCallbackForm"]</label>
						<textarea id="comment" class="form-control"></textarea>
					</div>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-primary">@localizer["orderCallbackButton"]</button>
				</div>
			</form>
		</div>
	</div>
</div>
</html>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
	$(document).ready(function () {
		$("#callBackform").submit(function (e) {
			e.preventDefault();
			let name = $('#UserName').val();
			let number = $('#Phone').val();
			let email = $('#email').val();
			let comment = $('#comment').val();
			$.ajax({
				url: '@Url.Action("CreateCallBackAndAdditionalService", "Order")',
				type: 'POST',
				data: {
					'userName': name,
					'phoneNumber': number,
					'email': email,
					'comment': comment
				},
				success: function () {
					alert("Завка принята, ожидайте звонка!");
				},
				failure: function () {
					alert("Произошла ошибка!");
				},
				error: function () {
					alert("Произошла ошибка!");
				}
			});
			return false;
		});
	});
</script>