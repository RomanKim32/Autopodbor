@model Autopodbor_312.ViewModel.NewsDetailsViewModel

@{
    ViewData["Title"] = "Изменение новости";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить новость</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditNews">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.News.Id" />
            <input type="hidden" asp-for="@Model.News.MainImagePath" />
            <input type="hidden" asp-for="@Model.News.Publicate" />
            <div class="form-group">
                <label asp-for="@Model.News.Name" class="control-label">Название новости</label>
                <input asp-for="@Model.News.Name" class="form-control" />
                <span asp-validation-for="@Model.News.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.News.Body" class="control-label">Описание новости</label>
                <input asp-for="@Model.News.Body" class="form-control" />
                <span asp-validation-for="@Model.News.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="row">
        <div>
            <h5 class="mt-3 mb-3">Фото на главной странице </h5>
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@Model.MainPic.Id" />
                <img width="100" height="100" src="@Model.MainPic.Path" />
                <br />
                <input type="file" name="newPhoto" />
                <input type="submit" asp-action="EditMainPhoto" asp-controller="News" value="Изменить" class="btn btn-primary" />
            </form>
        </div>
        <h4 class="mt-3 mb-3">Фото на детальной странице</h4>
        @foreach (var item in Model.MinorPictures)
        {
            <div class="col-2">
                <form method="post" asp-action="EditMinorPhoto" asp-controller="News" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@item.Id" />
                    <img width="100" height="100" src="@item.Path" />
                    <br />
                    <input type="file" name="newPhoto" />
                    <input type="submit" value="Изменить" class="btn btn-primary" />
                </form>
                <form method="post">
                    <input type="submit" asp-action="DeletePhotoOrVideo" asp-controller="News" asp-route-id="@item.Id" class="btn btn-primary" value="Удалить фото" />
                </form>
            </div>
        }
        <form class="mt-3 mb-3" method="post" enctype="multipart/form-data">
            <h6>Добавить фото</h6>
            <input type="file" name="newPhoto" />
            <input type="submit" asp-action="AddMinorPhoto" asp-controller="News" asp-route-id="@Model.News.Id" class="btn btn-primary" value="Добавить фото" />
        </form>
    </div>
    <div class="row">
        <h4 class="mt-3 mb-3">Видео: </h4>  
        @foreach (var item in Model.Videos)
        {
            <div class="col-2">
                <form asp-action="EditVideo" asp-controller="News" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@item.Id" />
                    <iframe width="150" height="100" src=@item.Path title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <br />
                    <input type="text" name="newVideoId" placeholder="Введите id ролика"/>
                    <input type="submit" value="Изменить" class="btn btn-primary" />
                </form>
                <form method="post">
                    <input type="submit" asp-action="DeletePhotoOrVideo" asp-controller="News" asp-route-id="@item.Id" class="btn btn-primary" value="Удалить видео" />
                </form>
            </div>
        }
        <form class="mt-3 mb-3" method="post" enctype="multipart/form-data">
            <h6>Добавление:</h6>
            <input type="text" name="videoId" placeholder="Введите id ролика" />
            <input type="submit" asp-action="AddVideo" asp-controller="News" asp-route-id="@Model.News.Id" class="btn btn-primary" value="Добавить видео" />
        </form>
    </div>
</div>

