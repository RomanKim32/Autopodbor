<link type="text/css" rel="stylesheet" href="~/css/Media/News/NewsEdit.css" />
@model Autopodbor_312.ViewModel.NewsDetailsViewModel

@{
    ViewData["Title"] = "Изменение новости";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить новость</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditNews" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.News.Id" />
            <input type="hidden" asp-for="@Model.News.MainImagePath" />
            <input type="hidden" asp-for="@Model.News.Publicate" />
            <div class="form-group">
                <input asp-for="@Model.News.NameRu" class="form-control" required="required" placeholder="Название новости на русском"/>
                <span asp-validation-for="@Model.News.NameRu" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <textarea asp-for="@Model.News.BodyRu" class="form-control" required="required" placeholder="Описание новости на русском"></textarea>
                <span asp-validation-for="@Model.News.BodyRu" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <input asp-for="@Model.News.NameKy" class="form-control" required="required" placeholder="Название новости на кыргызском"/>
                <span asp-validation-for="@Model.News.NameKy" class="text-danger"></span>
            </div>
            <div class="form-group">                
                <textarea asp-for="@Model.News.BodyKy" class="form-control" required="required" placeholder="Описание новости на кыргызском"></textarea>
                <span asp-validation-for="@Model.News.BodyKy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Изменить</button>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="row">
        <div>
            <h4 class="mt-3 mb-3">Фото на главной странице </h4>
            <div class="col-3">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@Model.MainPic.Id" />
                    <img width="300" height="300" src="@Model.MainPic.Path" />
                    <br />
                    <input type="file" name="newPhoto" class="form-control" required="required" />
                    <button type="submit" asp-action="EditMainPhoto" asp-controller="News" class="btn btn-primary">Изменить</button>
                </form>
            </div>
        </div>
        <h4 class="mt-3 mb-3">Фото на детальной странице</h4>
        @foreach (var item in Model.MinorPictures)
        {
            <div class="col-3">
                <form method="post" asp-action="EditMinorPhoto" asp-controller="News" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@item.Id" />
                    <img width="300" height="300" src="@item.Path" />
                    <br />
                    <input type="file" name="newPhoto" class="form-control" required="required" />
                    <button type="submit" class="btn btn-primary">Изменить</button>
                </form>
                <form method="post">
                    <input type="submit" asp-action="DeletePhotoOrVideo" asp-controller="News" asp-route-id="@item.Id" class="btn btn-primary" value="Удалить фото" />
                </form>
            </div>
        }
        <div class="row">
            <div class="col-3">
                <form class="mt-3 mb-3 addPhoto" method="post" enctype="multipart/form-data">
                    <h6>Добавить фото</h6>
                    <input type="file" name="newPhoto" class="form-control" required="required" />
                    <button type="submit" asp-action="AddMinorPhoto" asp-controller="News" asp-route-id="@Model.News.Id" class="btn btn-primary">Добавить фото</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <h4 class="mt-3 mb-3">Видео: </h4>  
        @foreach (var item in Model.Videos)
        {
            <div class="col-3">
                <form asp-action="EditVideo" asp-controller="News" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@item.Id" />
                    <iframe width="300" height="300" src="@item.Path" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <br />
                    <input type="text" name="newVideoId" class="form-control" placeholder="Введите id ролика" required="required" />
                    <button type="submit" class="btn btn-primary">Изменить</button>
                </form>
                <form method="post">
                    <input type="submit" asp-action="DeletePhotoOrVideo" asp-controller="News" asp-route-id="@item.Id" class="btn btn-primary" value="Удалить видео" />
                </form>
            </div>
        }
        <div class="row">
            <div class="col-3">
                <form class="mt-3 mb-3" method="post" enctype="multipart/form-data">
                    <h6>Добавление:</h6>
                    <input type="text" name="videoId" class="form-control" placeholder="Введите id ролика" required="required" />
                    <button type="submit" asp-action="AddVideo" asp-controller="News" asp-route-id="@Model.News.Id" class="btn btn-primary">Добавить видео</button>
                </form>
            </div>
        </div>
    </div>
</div>

