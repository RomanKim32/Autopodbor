@model Autopodbor_312.Models.News

@{
    ViewData["Title"] = "Удаление новости";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление новости</h1>
<h3>Вы уверены что хотите удалить новость?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название новости:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameRu)
        </dd>
        <dt class = "col-sm-2">
            Описание новости:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BodyRu)
        </dd>
        <dt class = "col-sm-2">
            Дата последнего обновления:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
    
    <form asp-action="DeleteNews">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
