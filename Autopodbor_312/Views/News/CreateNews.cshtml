@model Autopodbor_312.Models.News


@{
    ViewData["Title"] = "Создать новость";
}

<h1>Создать новость</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNews" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название новости</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label">Описание новости</label>
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <label class="custom-file-label" for="customFile">Выберите фото для главной страницы</label>
                <input type="file" name="mainPic" /><br />
            </div>
            <div class="form-group">
                <label сlass="control-label">Выберите фотогрфии для детальной страницы</label>
                <input type="file" name="uploadFiles" multiple /><br>
            </div>
            <div class="form-group">
                <label сlass="control-label">Загрузка видео</label>
                <input type="text" name="video" /><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать новость" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}