<link type="text/css" rel="stylesheet" href="~/css/Media/News/NewsDetails.css" />
@using System.Threading;
@model Autopodbor_312.ViewModel.NewsDetailsViewModel

@{
    ViewData["Title"] = "Детальная страница";
}

<body>
    <div class="container text-center">
        <div class="firstBlock">
            @if (@Thread.CurrentThread.CurrentCulture.DisplayName == "Русский")
            {
                <h1 class="firstBlockHeader">@Model.News.NameRu</h1>
                <p class="firstBlockText">@Model.News.BodyRu</p>
            }
            else
            {
                <h1 class="firstBlockHeader">@Model.News.NameKy</h1>
                <p class="firstBlockText">@Model.News.BodyKy</p>
            }
        </div>
        @if (Model.MinorPictures.Count() == 1)
        {
                    <div class="secondBlock">
                            @for (int i = 0; i < Model.MinorPictures.Count(); i++)
                            {
                                <img class="img-fluid rounded-start carImg" src="@Model.MinorPictures[i].Path" alt="Photo">
                            }
                        </div>
        }
        else{
        <div class="secondBlock">
            <div id="videosCarousel" class="carousel slide carousel1">
                <div class="carousel-inner">
                    @for (int j = 0; j < Model.MinorPictures.Count(); j++)
                    {
                        @if (j == 0)
                        {
                            <div class="carousel-item active">
                                <img src="@Model.MinorPictures[j].Path" class="carImg" alt="...">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src="@Model.MinorPictures[j].Path" class="carImg" alt="...">
                            </div>
                        }
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#videosCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#videosCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        }
        @if (Model.Videos.Count() == 1)
        {
             @for (int i = 0; i < Model.Videos.Count(); i++)
                            {
                                    <iframe class=" video thirdBlock" src="@Model.Videos[i].Path" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                            }
        }
        else{
       
            <div class="thirdBlock">
                <div id="photosCarousel" class="carousel slide carousel2" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Videos.Count(); i++)
                        {
                            @if (i == 0)
                            {
                                <div class="carousel-item active">
                                    <iframe class=" video" src="@Model.Videos[i].Path" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <iframe class=" video" src="@Model.Videos[i].Path" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                                </div>
                            }
                        }
                    </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#photosCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#photosCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        
        }
    </div>
</body>