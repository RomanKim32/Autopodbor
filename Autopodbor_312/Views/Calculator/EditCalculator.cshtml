<link type="text/css" rel="stylesheet" href="~/css/Calculator/EditCalculator.css"/>
@model Autopodbor_312.ViewModel.CalculatorViewModel

@{
	ViewBag.Title = "Редактирование";
}

<h3>Таблица "Марки"</h3>
<p>
    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#addModal" onclick="GetName('brand')">Добавить модель</button>
</p>
<div id="CarsBrandsDiv">
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Цена
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CarsBrands)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#editModal" onclick="GetId('brand-@item.Id','brand')">Изменить</button>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="GetId('brand-@item.Id','brand')">Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>


