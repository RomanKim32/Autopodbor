<!-- AddNewParameterModal -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Добавление</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <p>Название</p>
                    <input id="key"/>
                    <p>Цена</p>
                    <input id="value"/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="addParameter()">Добавить</button>
            </div>
        </div>
    </div>
</div>

<!-- DeleteParameterModal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Подтверждение удаления</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Вы увервены?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="deleteParameter()">Да</button>
            </div>
        </div>
    </div>
</div>

<!-- EditParameterModal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Редактирование</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <form>
                        <p>Новое название</p>
                        <input id="newKey" />
                        <p>Новая цена</p>
                        <input id="newValue" />
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" onclick="editParameter()">Да</button>
            </div>
        </div>
    </div>
</div>


<script>
    let Name = '';
    function GetName(name) {
        Name = name;
    };
        let Id = '';
    function GetId(id,name) {
        Id = id;
        Name = name;
    };
     const deleteParameter = function(){
   
         if(Name === "brand"){
       
            $('#CarsBrandsDiv').load('@Url.Action("DeleteParameter","Calculator")?id='+Id);            
         }else if(Name==="year"){
             $('#CarsYearDiv').load('@Url.Action("DeleteParameter","Calculator")?id='+Id);
         }else if(Name==="fuel"){
             $('#CarsFuelDiv').load('@Url.Action("DeleteParameter","Calculator")?id='+Id);
         }else if(Name==="body"){
             $('#CarsBodyTypeDiv').load('@Url.Action("DeleteParameter","Calculator")?id='+Id);
         }
          $('#deleteModal').modal('hide');
           };

         const addParameter= function() {
         event.preventDefault();

         if(Name === "brand"){

              $('#CarsBrandsDiv').load('@Url.Action("AddParameter", "Calculator")?name=' + Name +'&key='+ $("#key").val()+'&value='+ $("#value").val());
         }else if(Name ==="year"){
             $('#CarsYearDiv').load('@Url.Action("AddParameter", "Calculator")?name=' + Name +'&key='+ $("#key").val()+'&value='+ $("#value").val());
         }
         else if(Name ==="fuel"){
             $('#CarsFuelDiv').load('@Url.Action("AddParameter", "Calculator")?name=' + Name +'&key='+ $("#key").val()+'&value='+ $("#value").val());
         }
         else if(Name ==="body"){
             $('#CarsBodyTypeDiv').load('@Url.Action("AddParameter", "Calculator")?name=' + Name +'&key='+ $("#key").val()+'&value='+ $("#value").val());
         }
          $('#addModal').modal('hide');
           };   

         const editParameter= function() {
         event.preventDefault();

         if(Name === "brand"){

              $('#CarsBrandsDiv').load('@Url.Action("EditParameter", "Calculator")?id=' + Id +'&key='+ $("#newKey").val()+'&value='+ $("#newValue").val());
         }else if(Name ==="year"){
             $('#CarsYearDiv').load('@Url.Action("EditParameter", "Calculator")?id=' + Id +'&key='+ $("#newKey").val()+'&value='+ $("#newValue").val());
         }
         else if(Name ==="fuel"){
             $('#CarsFuelDiv').load('@Url.Action("EditParameter", "Calculator")?id=' + Id +'&key='+ $("#newKey").val()+'&value='+ $("#newValue").val());
         }
         else if(Name ==="body"){
             $('#CarsBodyTypeDiv').load('@Url.Action("EditParameter", "Calculator")?id=' + Id +'&key='+ $("#newKey").val()+'&value='+ $("#newValue").val());
         }
          $('#editModal').modal('hide');
           };   
</script>
