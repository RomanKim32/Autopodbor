@model Autopodbor_312.Models.CarsBrandsModel

@{
    ViewData["Title"] = "Добавиление модели";
}

<h1>Добавить новую модель к бренду @ViewBag.Brand.Brand</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddModels">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Model" class="control-label">Модель</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
             <input asp-for="CarsBrandsId" value ="@ViewBag.Brand.Id" class="form-control" hidden/>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
