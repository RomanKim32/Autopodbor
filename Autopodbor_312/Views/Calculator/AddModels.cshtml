<link type="text/css" rel="stylesheet" href="~/css/Calculator/AddModels.css" />
@model Autopodbor_312.Models.CarsBrandsModel

@{
    ViewData["Title"] = "Добавиление модели";
}

<h1 class="mt-3 text-center">Добавить новую модель к бренду @ViewBag.Brand.Brand</h1>
<hr />
<div class="row justify-content-evenly">
    <div class="col-md-4">
        <form asp-action="AddModels">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Model" class="control-label">Модель</label>
                <input asp-for="Model" class="form-control" required/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" required type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
             <input asp-for="CarsBrandsId" value ="@ViewBag.Brand.Id" class="form-control" hidden/>
            <div class="form-group mt-3">
                <input type="submit" value="Добавить" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>


