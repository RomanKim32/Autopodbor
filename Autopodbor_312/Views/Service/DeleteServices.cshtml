@model Autopodbor_312.Models.Services

@{
    ViewData["Title"] = "Удаление сервиса";
}

<h1>Удалить</h1>

<h3>Вы уверены что хотите удалить данный сервис?</h3>
<hr />
<div>
    <h5 class="card-title">Название:</h5>
    <p class="card-text">@Model.NameRu</p>
    <h5 class="card-title">Описание:</h5>
    <p class="card-text">@Model.DescriptionRu</p>
    <form asp-action="DeleteServices">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger me-3" /> 
        <a asp-action="ForAdminServices" class="btn btn-outline-dark">Назад</a>
    </form>
</div>

