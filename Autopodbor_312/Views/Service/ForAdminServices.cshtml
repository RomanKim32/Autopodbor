@model IEnumerable<Autopodbor_312.Models.Services>

@{
    ViewData["Title"] = "Все услуги";
}

<h1 class="text-center mt-4">Все услуги</h1>

<p class="text-center mt-3 mb-4">
    <a class="btn btn-outline-dark" asp-action="CreateServices">Создать дополнительную услугу</a>
</p>

<div class="row justify-content-evenly">
    @foreach (var item in Model)
    {
        if (item.NameRu != "Обратный звонок")
        {
            <div class="card col-md-2 mb-4" style="width: 24rem;">
                <img src="@(item.Photo)" width="100" height="200" class="card-img-top" alt="photo">
                <div class="card-body">
                    <h5 class="card-title fw-bold fs-4">@item.NameRu</h5>
                    <p class="card-text">@item.DescriptionRu</p>
                    <a class="btn btn-outline-dark" asp-action="EditServices" asp-route-id="@item.Id"> Изменить </a>
                    @if (item.IsAdditional == true)
                    {
                        <a class="btn btn-outline-dark" asp-action="DeleteServices" asp-route-id="@item.Id"> Удалить </a>
                    }    
                </div>
        </div>
        }
    }
</div>